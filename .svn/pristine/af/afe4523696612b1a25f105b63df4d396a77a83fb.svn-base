/*
  input控件等的样式设置
 */
/* 默认的element-ui input select控件的focus外框颜色 */
$--input-focus-color:#409EFF;
/* 默认的element-ui input select控件的外框颜色 */
$--input-border-color:#C2C5CE;
/* 默认的element-ui input select控件的hover外框颜色 */
$--input-hover-color:#579ADC;
/* 默认的element-ui input select控件的文字颜色 */
$--input-color:#579ADC;
/* 默认的element-ui input select控件的placeholder文字颜色 */
$--input-color:#606266;

/*
  color的定义，warning、success、info、error等颜色保持不变
 */
/*主色*/
$--color-primary:#2A82DB;
$--color-primary2:#D9EBFB;
/*主色2**/
$--color-secondary:#f7901d;
$--color-third:#ccc;
/*辅助色1  用于普通文字、文本颜色*/
$--color-auxiliary1:#000;
/*辅助色2  用于普通文字、内容标题颜色*/
$--color-auxiliary2:#333;
/*辅助色3  用于辅助、次要文字信息*/
$--color-auxiliary3:#666;
/*辅助色4  用于辅助、次要说明信息、描边*/
$--color-auxiliary4:#bbb;
/*辅助色5  用于内容及头部表格底色、分割线*/
$--color-auxiliary5:#dcdcdc;
/*辅助色6  用于内容及表格底色*/
$--color-auxiliary6:#f5f5f5;

$--font-max:20px;
$--font-large:18px;
$--font-medium:16px;
$--font-small:14px;
$--font-mini:12px;